generator client {
  provider = "prisma-client-js"
  output   = "./src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model tags {
  tag_id    String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id   String      @db.Uuid
  tag_name  String      @db.VarChar(50)
  users     users       @relation(fields: [user_id], references: [user_id], onDelete: Cascade, onUpdate: NoAction)
  todo_tags todo_tags[]

  @@unique([user_id, tag_name])
}

model todo_tags {
  todo_id String @db.Uuid
  tag_id  String @db.Uuid
  tags    tags   @relation(fields: [tag_id], references: [tag_id], onDelete: Cascade, onUpdate: NoAction)
  todos   todos  @relation(fields: [todo_id], references: [todo_id], onDelete: Cascade, onUpdate: NoAction)

  @@id([todo_id, tag_id])
}

model todos {
  todo_id    String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id    String      @db.Uuid
  title      String?     @db.VarChar(100)
  content    String?
  created_at DateTime?   @default(now()) @db.Timestamp(6)
  updated_at DateTime?   @default(now()) @db.Timestamp(6)
  todo_tags  todo_tags[]
  users      users       @relation(fields: [user_id], references: [user_id], onDelete: Cascade, onUpdate: NoAction)
}

model users {
  user_id       String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email         String    @unique @db.VarChar(100)
  password_hash String    @db.VarChar(255)
  created_at    DateTime? @default(now()) @db.Timestamp(6)
  tags          tags[]
  todos         todos[]
}
